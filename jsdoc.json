{
    "source": {
        "include": ["src", "package.json", "README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "jsdoc-plugin-typescript"
    ],
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "destination": "./docs/",
        "readme": "./README.md",
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "theme": "dark",
            "favicon": "./icon.png",
            "sections": [
                "Classes"
            ]
        }
    },
    "typescript": {
        "moduleRoot": "src"
    }
}